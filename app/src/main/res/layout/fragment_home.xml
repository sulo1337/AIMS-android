<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="homeViewModel"
            type="com.example.aimsandroid.homefragment.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/homeFragmentParentLayout"
        android:theme="@style/Theme.AIMSAndroid"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/gpsTitle"
            style="@style/san_francisco_bold_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:text="@string/gpsTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/latitudeTitle"
            style="@style/san_francisco_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="Latitude "
            app:layout_constraintStart_toStartOf="@+id/gpsTitle"
            app:layout_constraintTop_toBottomOf="@+id/gpsTitle" />

        <TextView
            android:id="@+id/longitudeTitle"
            style="@style/san_francisco_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:text="Longitude"
            app:layout_constraintEnd_toEndOf="@+id/gpsTitle"
            app:layout_constraintTop_toBottomOf="@+id/gpsTitle"
            />

        <TextView
            android:id="@+id/latitude"
            style="@style/san_francisco_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="35.49444"
            app:layout_constraintEnd_toEndOf="@+id/latitudeTitle"
            app:layout_constraintStart_toStartOf="@+id/latitudeTitle"
            app:layout_constraintTop_toBottomOf="@+id/latitudeTitle" />

        <TextView
            android:id="@+id/longitude"
            style="@style/san_francisco_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="82.6387"
            app:layout_constraintEnd_toEndOf="@+id/longitudeTitle"
            app:layout_constraintStart_toStartOf="@+id/longitudeTitle"
            app:layout_constraintTop_toBottomOf="@+id/longitudeTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>